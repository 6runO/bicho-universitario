<div class="card-bicho flex-grow-1">
<%= cl_image_tag bicho.photo.key, height: 300, width: 400, crop: :pad %>
  <div class="card-bicho-infos">
    <div>
      <div class="d-flex align-items-center justify-content-between">
        <h2><%= bicho.apelido.capitalize %></h2>
        <% if bicho.sexo == "Fêmea" %>
          <i class="fas fa-venus"></i>
        <% else %>
          <i class="fas fa-mars"></i>
        <% end %>
      </div>

      <p class="mt-2 mb-3"><i class="fas fa-quote-left"></i> <%= bicho.personalidade %></p>

      <div class="d-flex justify-content-between align-items-center mt-2">
        <div class="d-flex">
          <div class="d-flex align-items-end">
            <% if bicho.especie == "Cachorro" %>
              <% if bicho.porte == "Pequeno" %>
                <i class="fas fa-dog pet-small pet-active"></i>
                <i class="fas fa-dog pet-medium"></i>
                <i class="fas fa-dog pet-large"></i>
              <% elsif bicho.porte == "Médio" %>
                <i class="fas fa-dog pet-small"></i>
                <i class="fas fa-dog pet-medium pet-active"></i>
                <i class="fas fa-dog pet-large"></i>
              <% else %>
                <i class="fas fa-dog pet-small"></i>
                <i class="fas fa-dog pet-medium"></i>
                <i class="fas fa-dog pet-large pet-active"></i>
              <% end %>
            <% elsif bicho.especie == "Gato" %>
              <% if bicho.porte == "Pequeno" %>
                <i class="fas fa-cat pet-small pet-active"></i>
                <i class="fas fa-cat pet-medium"></i>
                <i class="fas fa-cat pet-large"></i>
              <% elsif bicho.porte == "Médio" %>
                <i class="fas fa-cat pet-small"></i>
                <i class="fas fa-cat pet-medium pet-active"></i>
                <i class="fas fa-cat pet-large"></i>
              <% else %>
                <i class="fas fa-cat pet-small"></i>
                <i class="fas fa-cat pet-medium"></i>
                <i class="fas fa-cat pet-large pet-active"></i>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="d-flex">
          <i class="fas fa-graduation-cap"></i>
          <h2 class="card-bicho-pricing"><%= bicho.user.ife.upcase %></h2>
        </div>
      </div>
    </div>
  </div>
</div>
